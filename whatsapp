<!DOCTYPE html>
<html>
<head>
    <title>Your Landing Page</title>
</head>
<body>
    <h1>Your Landing Page</h1>
    <form id="responseForm">
        <!-- Add your form fields here -->
        <label for="name">Name:</label>
        <input type="text" id="name" name="name" required>
        <br>
        <label for="email">Email:</label>
        <input type="email" id="email" name="email" required>
        <br>
        <!-- Add other form fields as needed -->

        <button type="submit">Submit</button>
    </form>

    <script>
        document.getElementById("responseForm").addEventListener("submit", function (event) {
            event.preventDefault();
            submitForm();
        });

        function submitForm() {
            // Gather form data
            const formData = new FormData(document.getElementById("responseForm"));
            const data = {};
            formData.forEach((value, key) => {
                data[key] = value;
            });

            // Create the WhatsApp message link
            const whatsappMessage = `Hello, my name is ${data.name}, and my email is ${data.email}.`;

            // Open WhatsApp with the pre-filled message
            const whatsappLink = `https://wa.me/RECIPIENT_PHONE_NUMBER/?text=${encodeURIComponent(whatsappMessage)}`;
            window.open(whatsappLink, "_blank");
        }
    </script>
</body>
</html>
